<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/emerald_water"
    android:orientation="vertical"
    tools:context=".activities.ControlActivity">

    <TextView
        style="@style/TextView"
        android:text="@string/btn_control"
        tools:ignore="RtlSymmetry" />

    <ScrollView
        style="@style/baseView"
        android:background="@drawable/ali">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/mBtn_TextView"
                style="@style/Button"
                android:background="@drawable/candy"
                android:text="@string/TextView" />

            <Button
                android:id="@+id/mBtn_Button"
                style="@style/Button"
                android:background="@drawable/kyoo_pal"
                android:text="@string/Button" />

            <Button
                android:id="@+id/mBtn_Widgets"
                style="@style/Button"
                android:background="@drawable/teal_love"
                android:text="@string/widgets" />

            <Button
                android:id="@+id/mBtn_containers"
                style="@style/Button"
                android:background="@drawable/opa"
                android:text="@string/containers" />

            <Button
                android:id="@+id/mBtn_navigation"
                style="@style/Button"
                android:background="@drawable/evening_sunshine"
                android:text="@string/navigation" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>